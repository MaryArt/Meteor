            <TextBlock Grid.Row="0" Grid.Column="0" Text="№" Margin="0 0 10 0" />
            <TextBlock Grid.Row="0" Grid.Column="1" Text="T" Margin="0 0 10 0"/>
            <TextBlock Grid.Row="0" Grid.Column="2" Text="λ" Margin="0 0 10 0"/>
            <TextBlock Grid.Row="0" Grid.Column="3" Text="τ " Margin="0 0 10 0"/>
            <TextBlock Grid.Row="0" Grid.Column="4" Text="ω" Margin="0 0 10 0"/>
            <TextBlock Grid.Row="0" Grid.Column="5" Text="c" Margin="0 0 10 0"/>
            <TextBlock Grid.Row="0" Grid.Column="6" Text="o" Margin="0 0 10 0"/>
            <TextBlock Grid.Row="0" Grid.Column="7" Text="Z" Margin="0 0 10 0"/>
            <TextBlock Grid.Row="0" Grid.Column="8" Text="P" Margin="0 0 10 0"/>
