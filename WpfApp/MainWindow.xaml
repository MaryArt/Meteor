            <TextBlock Grid.Row="0" Grid.Column="14" Text="Поток" Margin="0 0 10 0"/>

            <ListView Grid.Row="1" Grid.ColumnSpan="16" ItemsSource="{Binding Meteors}" SelectedItem="{}" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBox Text="{ Binding }"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            --><!--<TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding }" />
